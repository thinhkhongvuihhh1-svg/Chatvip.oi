<script>
    // T√≠nh nƒÉng tim: m·ªói ng∆∞·ªùi ch·ªâ tim 1 l·∫ßn
    function likeVideo(btn) {
        const icon = btn.querySelector('span');
        const count = btn.querySelector('p');
        
        if (!btn.classList.contains('liked')) {
            btn.classList.add('liked');
            count.innerText = parseInt(count.innerText) + 1;
            // Hi·ªáu ·ª©ng rung nh·∫π khi tim
        } else {
            alert("B·∫°n ƒë√£ th·∫£ tim video n√†y r·ªìi!");
        }
    }

    // T√≠nh nƒÉng chia s·∫ª
    function shareVideo() {
        if (navigator.share) {
            navigator.share({
                title: 'Xem video n√†y tr√™n Tiktok Clone',
                url: window.location.href
            });
        } else {
            alert("Link web ƒë√£ ƒë∆∞·ª£c copy v√†o b·ªô nh·ªõ t·∫°m!");
            navigator.clipboard.writeText(window.location.href);
        }
    }

    // T·ª± ƒë·ªông ch·∫°y video khi cu·ªôn ƒë·∫øn (ƒë·∫∑c s·∫£n Tiktok)
    const videos = document.querySelectorAll('video');
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.play();
            } else {
                entry.target.pause();
            }
        });
    }, { threshold: 0.5 });

    videos.forEach(video => observer.observe(video));
</script>

